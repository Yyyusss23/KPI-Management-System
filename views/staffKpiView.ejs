          <canvas id="kpiProgressChart"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  // Extract KPI status counts from EJS
  const kpis = <%- JSON.stringify(kpis) %>;

  const total = kpis.length || 1; // avoid division by zero

  let completedCount = 0;
  let inProgressCount = 0;
  let notStartedCount = 0;

  kpis.forEach(kpi => {
    switch (kpi.status) {
      case 'Completed':
        completedCount++;
        break;
      case 'In Progress':
        inProgressCount++;
        break;
      case 'Not Started':
        notStartedCount++;
        break;
    }
  });

  // Calculate percentages
  const completedPercentage = ((completedCount / total) * 100).toFixed(2);
  const inProgressPercentage = ((inProgressCount / total) * 100).toFixed(2);
  const notStartedPercentage = ((notStartedCount / total) * 100).toFixed(2);

  const ctx = document.getElementById("kpiProgressChart").getContext("2d");

  const kpiProgressChart = new Chart(ctx, {
    type: "doughnut",
    data: {
      labels: ["Completed", "In Progress", "Not Started"],
      datasets: [
        {
          data: [
            completedPercentage,
            inProgressPercentage,
            notStartedPercentage
          ],
          backgroundColor: ["#28a745", "#ffc107", "#dee2e6", "#6c757d"],
          borderWidth: 1,
        },
      ],
    },
    options: {
      cutout: "70%",
      plugins: {
        legend: {
          display: true,
          position: "bottom",
        },
        tooltip: {
          callbacks: {
            label: function (context) {
              return context.label + ": " + context.raw + "%";
            },
          },
        },
      },
    },
  });
            // Area Chart
            const areaCtx = document
              .getElementById("kpiAreaChart")
              .getContext("2d");
            new Chart(areaCtx, {
              type: "line",
              data: {
                labels: [
                  "Jan 2025",
                  "Feb 2025",
                  "March 2025",
                  "April 2025",
                  "May 2025",
                ],
                datasets: [
                  {
                    label: "Completed Tasks",
                    data: [2, 4, 5, 7, 8],
                    fill: true,
                    backgroundColor: "rgba(25, 135, 84, 0.2)",
                    borderColor: "rgba(25, 135, 84, 1)",
                    tension: 0.3,
                    pointBackgroundColor: "rgba(25, 135, 84, 1)",
                    pointRadius: 5,
                  },
                ],
              },
              options: {
                responsive: true,
                plugins: {
                  legend: {
                    display: false,
                  },
                  tooltip: {
                    enabled: true,
                  },
                },
                scales: {
                  y: {
                    beginAtZero: true,
                    ticks: {
                      stepSize: 1,
                    },
                  },
                },
              },
            });
          </script>

          <!-- KPI Stats Overview Cards (Horizontal) -->
