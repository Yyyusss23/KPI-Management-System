<%
function getStatusBadgeClass(status) {
  switch (status) {
    case "In Progress":
      return "bg-warning text-dark";
    case "Completed":
      return "bg-success text-light";
    case "Not Started":
      return "bg-secondary text-light";
    case "Rejected":
      return "bg-danger text-light";
    default:
      return "bg-secondary text-light";
  }
}
%>

        <!-- Main Content -->
